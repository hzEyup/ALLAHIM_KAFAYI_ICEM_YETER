@model IEnumerable<ClassModel>
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Class";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Create New Class</a>
</p>
@if (TempData["Message"] is not null)
{
    <p class="text-warning">@TempData["Message"]</p>
}
<table id="classes" class="display" style="width:100%">

    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
    @*        <th>
                @Html.DisplayNameFor(model => model.Capacty)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.StudentCountDisplay)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
		@foreach (var item in Model) {
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Name)
					</td>
				@*	<td>
						@Html.DisplayFor(modelItem => item.Capacty)
					</td>*@
                <th>
                    @Html.DisplayFor(modelItem => item.StudentCountDisplay)
                </th>
				
					<td>
						<a asp-action="Details" asp-route-id="@item.Id">Details</a>&nbsp;|&nbsp;
						<a asp-action="Edit" asp-route-id="@item.Id">Edit</a>&nbsp;|&nbsp;
						<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
					</td>
				</tr>
		}
    </tbody>
</table>


@section Scripts {
        <link href="~/lib/datatables/css/jquery.datatables.min.css" rel="stylesheet" />
        <script src="~/lib/datatables/js/jquery.datatables.min.js"></script>

        <script>
            $(function () {
                $("#classes").DataTable();
            });
        </script>
}




