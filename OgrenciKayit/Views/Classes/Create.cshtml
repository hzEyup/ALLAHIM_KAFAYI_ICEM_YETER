@model ClassModel
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Create";
}

<h1 style="color:aliceblue">@ViewData["Title"]</h1>


<hr />
<div class="row">
    <div style="color:aliceblue" class="col-12">
        <form asp-action="Create">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row mb-3">
                <label asp-for="Name" class="col-2 col-form-label"></label>
                <div class="col-5">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>


            <div>
                <div class=" col-4">
                    <input type="submit" value="Save" class="btn btn-primary col-12" />
                    &nbsp;&nbsp;
                    <button type="reset" class="btn btn-primary">Reset</button>
                    &nbsp;&nbsp;
                    <p class="custombutton">
                        <a asp-action="Index" class="custombutton" style="background-color:darkorchid">
                            &nbsp;
                            back to List
                            &nbsp;
                        </a>
                    </p>
                </div>
        </form>
    </div>
</div>
