@model IEnumerable<LessonModel>
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Lessons";
}

<h1 style="color:aliceblue">@ViewData["Title"]</h1>


    <a asp-action="Create" class="custombutton" style="background-color:darkorchid">
        &nbsp;
        Create New
        &nbsp;
    </a>

<table style="background-color: rgba(255,255,255,0.3)" class="table">
    <thead style="font-size:large">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsNumeric)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="color:aliceblue">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsNumeric)
                </td>

                <td>
                    <a asp-action="Details" style="color:paleturquoise " asp-route-id="@item.Id">Details</a>&nbsp;|&nbsp;
                    <a asp-action="Edit" style="color:darkgoldenrod " asp-route-id="@item.Id">Edit</a>&nbsp;|&nbsp;
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>



