@model StudentModel
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Create";
}

<h1 style="color:antiquewhite">@ViewData["Title"]</h1>


<hr />
<div style="color:aliceblue" class="row">
    <div class="col-12">
        <form asp-action="Create" autocomplete="off" enctype="multipart/form-data">
		@Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row mb-3">
                <label asp-for="Name" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="Name" class="form-control" />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="SurName" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="SurName" class="form-control" />
					<span asp-validation-for="SurName" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="SchoolNo" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="SchoolNo" class="form-control" />
					<span asp-validation-for="SchoolNo" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="DateOfBirthday" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="DateOfBirthday" class="form-control date" type="text" />
					<span asp-validation-for="DateOfBirthday" class="text-danger"></span>
				</div>
            </div>
			<div class="row mb-3">
				<label asp-for="ClassId" class="col-2 col-form-label"></label>
				<div class="col-5">
					<select asp-for="ClassId" class="form-select" asp-items="ViewBag.ClassId">
						<option value="">-- Select --</option>
					</select>
					<span asp-validation-for="ClassId" class="text-danger"></span>
				</div>
			</div>

			<div class="row mb-3">
				<label asp-for="LessonIds" class="col-2 col-form-label"></label>
				<div class="col-5">
					<select multiple asp-for="LessonIds" class="form-select" asp-items="ViewBag.Lessons">
					</select>
					<span asp-validation-for="LessonIds" class="text-danger"></span>
				</div>
			</div>

			<div class="row mb-3">
				<label asp-for="ImgSrcDisplay" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input name="image" class="form-control" type="file" accept=".jpg, jpeg, .png"/>
				</div>
			</div>
  
            <div>
				<div class=" col-4">
					<input type="submit" value="Save" class="btn btn-primary col-12" />
					&nbsp;&nbsp;
                    <button type="reset" class="btn btn-primary">Reset</button>
					&nbsp;&nbsp;
					<p class="custombutton">
						<a asp-action="Index" class="custombutton" style="background-color:darkorchid">
							&nbsp;
							back to List
							&nbsp;
						</a>
					</p>
				</div>
            </div>
        </form>
    </div>
</div>en




@section Scripts {
	<link href="~/lib/select2/css/select2.min.css" rel="stylesheet" />
	<script src="~/lib/select2/js/select2.min.js"></script>
	<style>

		.select2-container--default .select2-selection--multiple .select2-selection__choice {
			background-color: #28a745;
			border-color: #3d9970;
			color: red;
		}
		
	</style>

	<link href="~/lib/bootstrap-datepicker/css/bootstrap-datepicker3.min.css" rel="stylesheet" />
	<script src="~/lib/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
	<script src="~/lib/bootstrap-datepicker/locales/bootstrap-datepicker.tr.min.js"></script>

	<script>
		$(function(){
			$("select").select2();
			$('.date').datepicker({
				todayBtn: "linked",
				language: "tr",
				orientation: "auto left",
				autoclose: true,
				todayHighlight: false
			});
		});
	</script>
}



