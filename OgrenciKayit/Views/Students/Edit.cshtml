@model StudentModel
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Edit";
}

<h1>@ViewData["Title"]</h1>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-12">
        <form asp-action="Edit" enctype="multipart/form-data" autocomplete="off">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row mb-3">
                <label asp-for="Name" class="col-2 col-form-label"></label>
                <div class="col-5">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="SurName" class="col-2 col-form-label"></label>
                <div class="col-5">
                    <input asp-for="SurName" class="form-control" />
                    <span asp-validation-for="SurName" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="SchoolNo" class="col-2 col-form-label"></label>
                <div class="col-5">
                    <input asp-for="SchoolNo" class="form-control" />
                    <span asp-validation-for="SchoolNo" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="DateOfBirthday" class="col-2 col-form-label"></label>
                <div class="col-5">
                    <input asp-for="DateOfBirthday" class="form-control" />
                    <span asp-validation-for="DateOfBirthday" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="ClassId" class="col-2 col-form-label"></label>
                <div class="col-5">
                    <select asp-for="ClassId" class="form-select" asp-items="ViewBag.ClassId">
                        <option value="">-- Select --</option>
                    </select>
                    <span asp-validation-for="ClassId" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="LessonIds" class="col-2 col-form-label"></label>
                <div class="col-5">
                    <select multiple asp-for="LessonIds" class="form-select" asp-items="ViewBag.Lessons">
                    </select>
                    <span asp-validation-for="LessonIds" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">  
                <label asp-for="ImgSrcDisplay" class="col-2 col-form-label"></label>
                <div class="col-5">
                    <input name="image" class="form-control" type="file" accept="@AppSettings.AcceptedImageExtensions" />
                </div>
            </div>
            <div class="col-5">
                <a asp-action="DeleteImage" asp-route-id="@Model.Id">Delete Image</a>
            </div>

            <input type="hidden" asp-for="Id" />

            <div class="row mb-3">
                <div class="offset-2 col-5">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    &nbsp;&nbsp;
                    <button type="reset" class="btn btn-outline-primary">Reset</button>
                    &nbsp;&nbsp;
                    <a asp-action="Index" class="custombutton" style="background-color:darkmagenta"> &nbsp; Back to List &nbsp;</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <link href="~/lib/select2/css/select2.min.css" rel="stylesheet" />
    <script src="~/lib/select2/js/select2.min.js"></script>

    <link href="~/lib/bootstrap-datepicker/css/bootstrap-datepicker3.min.css" rel="stylesheet" />
    <script src="~/lib/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
    <script src="~/lib/bootstrap-datepicker/locales/bootstrap-datepicker.tr.min.js"></script>

    <script>
        $(function () {
            $("select").select2();
            $('.date').datepicker({
                todayBtn: "linked",
                language: "en",
                orientation: "auto left",
                autoclose: true,
                todayHighlight: true
            });
        });
    </script>
}


