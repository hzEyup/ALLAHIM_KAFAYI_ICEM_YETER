@model IEnumerable<StudentModel>

@{
    ViewData["Title"] = "Students";
}

<h1>STUDENTS </h1>


<table class="table table-hover">
    <thead style="font-size:large">
        <tr>
           
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SurName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SchoolNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirthdayDisplay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClassNameDisplay)
            </th>
			<td>
				@Html.DisplayNameFor(model => model.LessonDisplay)
			</td>
            <th></th>
        </tr>
    </thead>
    <tbody style="font-synthesis-style:unset">
		@foreach (var item in Model) {
            <tr style="color:lightgray">
					<td>
						@Html.DisplayFor(modelItem => item.Name)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.SurName)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.SchoolNo)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.DateOfBirthdayDisplay)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.ClassNameDisplay)
					</td>
                    <td>
						@Html.Raw(item.LessonIds)
					</td>
					<td >
                    <a asp-action="Details" style="color:paleturquoise " asp-route-id="@item.Id">Details</a>&nbsp;|&nbsp;
                    <a asp-action="Edit" style="color:gold " asp-route-id="@item.Id">Edit</a>&nbsp;|&nbsp;
						<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
					</td>
				</tr>
		}
    </tbody>
    <p class="custombutton">
        <a asp-action="Create" class="custombutton" style="background-color:darkorchid">
            &nbsp;
            Create New
            &nbsp;
        </a>
    </p>
</table>


@section Scripts {
        <link href="~/lib/datatables/css/jquery.datatables.min.css" rel="stylesheet" />
        <script src="~/lib/datatables/js/jquery.datatables.min.js"></script>

        <script>
            $(function () {
                $("#students").DataTable();
            });
        </script>
}


