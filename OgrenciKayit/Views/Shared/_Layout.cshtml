<!DOCTYPE html>
<html lang="en">
<head style="background-color:transparent">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width , initial-scale=1.0" />
    <title>@ViewData["Title"] - OgrenciKayit</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OgrenciKayit.styles.css" asp-append-version="true" />
</head>
<body >
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-transparent border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">Ogrenci Kayit</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if(User.Identity.IsAuthenticated)
                        {
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Students" asp-action="Index">Students</a>
                        </li>
                       
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Classes" asp-action="Index">Classes</a>
                            </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Lessons" asp-action="Index">Lessons</a>
                            </li>
                        }


                    </ul>
                    <div class="navbar-text">
                        <ul class="navbar-nav me-auto">
                            @if (!User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item ">
                                    <a class="nav-link text-warning custombutton" style="background-color:mediumpurple " asp-area="Account" asp-controller="Users" asp-action="Login">&nbsp; LOGIN &nbsp;</a> &nbsp; &nbsp; &nbsp;
                                </li>
                                
                                <li class="nav-item">
                                    <a class="nav-link text-warning custombutton" style="background-color:mediumpurple " asp-area="Account" asp-controller="Users" asp-action="Register">&nbsp; REGISTER &nbsp;</a>
                                </li>
                            }
                            else
                            {
                                <li style="font-size:xx-large" class="nav-item">
                                    <div style=" color:darkgoldenrod"  class="usernamediv">
                                        <p style="color:floralwhite">@User.Identity.Name</p>
                                    </div>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-warning" asp-area="Account" asp-controller="Users" asp-action="Logout">Logout</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="text-center text-lg-start bg-dark text-muted">
        <!-- Section: Social media -->
        <section class="d-flex justify-content-center justify-content-lg-between p-4 border-bottom">
            <!-- Left -->
            <div class="me-5 d-none d-lg-block  ">
            </div>
            <!-- Left -->
            <!-- Right -->
            <div>
                <a href="https://discord.gg/yXFWNeD38C" class="me-4 link-secondary">
                    <i class="fab fa-discord-f"></i>
                </a>
                <a href="" class="me-4 link-secondary">
                    <i class="fab fa-twitter"></i>
                </a>
                <a href="" class="me-4 link-secondary">
                    <i class="fab fa-google"></i>
                </a>
                <a href="" class="me-4 link-secondary">
                    <i class="fab fa-instagram"></i>
                </a>
                <a href="" class="me-4 link-secondary">
                    <i class="fab fa-linkedin"></i>
                </a>
                <a href="" class="me-4 link-secondary">
                    <i class="fab fa-github"></i>
                </a>
            </div>
            <!-- Right -->
        </section>
        <!-- Section: Social media -->
        <!-- Section: Links  -->
        <section class="">
            <div class="container text-center text-md-start mt-5">
                <!-- Grid row -->
                <div class="row mt-3">
                    <!-- Grid column -->
                    <div class="col-md-3 col-lg-4 col-xl-3 mx-auto mb-4">
                        <!-- Content -->
                        <h6 class="text-uppercase fw-bold mb-4">
                            <i class="fas fa-gem me-3 text-secondary"></i>Company name
                        </h6>
                        <p>
                            This site was made by eyüp karaman to try it out.
                        </p>
                    </div>
                    <!-- Grid column -->
                    <!-- Grid column -->
                    <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mb-4">
                        <!-- Links -->
                        <h6 class="text-uppercase fw-bold mb-4">
                            LINKS 
                        </h6>
                        <p>
                            <a asp-controller="Students" class="text-reset" asp-action="Index">Students</a>
                        </p>
                        <p>
                            <a asp-controller="Classes" class="text-reset" asp-action="Index">Classes</a>
                        </p>
                        <p>
                            <a asp-controller="Lessons" class="text-reset" asp-action="Index">Lessons</a>
                        </p>
                        
                    </div>
                    <!-- Grid column -->
                    <!-- Grid column -->
                   
                    <!-- Grid column -->
                    <!-- Grid column -->
                    <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mb-md-0 mb-4">
                        <!-- Links -->
                        <h6 class="text-uppercase fw-bold mb-4">SOICAL MEDIA</h6>
                        
                      
                        <a class="text-reset fw-bold" target="_blank" href="https://discord.gg/yXFWNeD38C">Discord</a>&nbsp;
                        &nbsp;&nbsp;
                        <br />
                        &nbsp;&nbsp;
                        &nbsp;<p class="text-reset fw-bold">eyupselehattin2005@gmail.com</p>
                        
                    </div>
                    <!-- Grid column -->
                </div>
                <!-- Grid row -->
            </div>
        </section>
        <!-- Section: Links  -->
        <!-- Copyright -->
        <div class="text-center p-4" style="background-color: rgba(0, 0, 0, 0.025);">
           
            <a class="text-reset fw-bold" target="_blank" href="https://www.youtube.com/watch?v=dQw4w9WgXcQ">Click if you want to learn the secrets of the universe</a>
        </div>
        <!-- Copyright -->
    </footer>
    <!-- Footer -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
